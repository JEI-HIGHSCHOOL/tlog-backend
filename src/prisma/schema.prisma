// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  password    String
  name        String
  Plans       Plans[]
  UserPlan    UserPlan[]
}

model EmailVerify {
  id        String   @id @default(uuid())
  email     String
  token     String
  createdAt DateTime
}

model Plans {
  id                        String @id @default(uuid())
  place_id                  String
  latitude                  Float
  longitude                 Float
  place_phone               String
  place_category_group_name String
  place_address             String
  place_name                String
  plan_id                   String
  user                      User?   @relation(fields: [userId], references: [id])
  userId                    String?
}

model UserPlan {
  id        String   @id @default(uuid())
  plan_id   String
  createdAt DateTime
  share     Boolean
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}
