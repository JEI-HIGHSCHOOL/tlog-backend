// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  password String?
  name     String
  UserPlan UserPlan[]
}

model EmailVerify {
  id        String   @id @default(uuid())
  email     String
  token     String
  createdAt DateTime
}

model Plan {
  id                        String    @id @default(uuid())
  place_id                  String
  latitude                  Float
  longitude                 Float
  place_phone               String
  place_category_group_name String
  place_address             String
  place_name                String
  planId                    String?
  plan                      UserPlan? @relation(fields: [planId], references: [id])
}

model UserPlan {
  id        String   @id @default(uuid())
  createdAt DateTime
  share     Boolean
  owner      User?    @relation(fields: [userId], references: [id])
  userId    String?
  plans      Plan[]
}
